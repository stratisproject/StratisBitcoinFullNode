@model JArray
<div class="modal fade" data-keyboard="false" data-backdrop="static" id="miningPublicKeys" tabindex="-1" role="dialog" aria-labelledby="miningPublicKeys" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Mining Public Keys</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @if (Model == null)
                {
                    <p class="text-center text-muted"><em>Missing Mining Public Keys</em></p>
                }
                else
                {
                    <ul class="list-unstyled align-items-center flex-column d-flex">
                        @foreach (var miningPubKey in Model)
                        {
                            <li class="py-2">
                                <code>@miningPubKey</code>
                                <a href="#" class="text-primary ml-2 copy-clipboard">Copy</a>
                            </li>
                        }
                    </ul>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary mx-auto" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>