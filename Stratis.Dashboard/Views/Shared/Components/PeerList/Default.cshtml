@model IEnumerable<PeerItem>

<div class="table-responsive">
   <table class="table table-striped table-responsive">
      <thead>
         <tr>
            <th>#</th>
            <th>EndPoint</th>
            <th>Connected At</th>
            <th>User Agent</th>
            <th>Version</th>
            <th>Read (Kb)</th>
            <th>Write (Kb)</th>
         </tr>
      </thead>
      <tbody>
         @{int itemCount = 0;}
         @foreach (var item in Model) {
            <tr>
               <th scope="row">@(++itemCount)</th>
               <td>@item.EndPoint</td>
               <td>@item.ConnectedAt</td>
               <td>@item.PeerUserAgent</td>
               <td>@item.PeerVersion</td>
               <td>@(item.Read/1024)</td>
               <td>@(item.Written/1024)</td>
            </tr>
         }
      </tbody>
   </table>
</div>