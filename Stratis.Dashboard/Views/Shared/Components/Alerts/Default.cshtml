@model IEnumerable<Stratis.Dashboard.Model.Alert>
@functions{
   public string GetWarningStyle(Stratis.Dashboard.Model.Alert.AlertLevel level) {
       switch (level) {
           case Stratis.Dashboard.Model.Alert.AlertLevel.Info:
               return "label-info";
           case Stratis.Dashboard.Model.Alert.AlertLevel.Success:
               return "label-success";
           case Stratis.Dashboard.Model.Alert.AlertLevel.Warning:
               return "label-warning";
           case Stratis.Dashboard.Model.Alert.AlertLevel.Danger:
               return "label-danger";
           default:
               return "label-default";
       }
   }
}

<li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-bell"></i> <b class="caret"></b></a>
    <ul class="dropdown-menu alert-dropdown">
        @foreach (var item in Model) {
        <li>
            <a href="#">@item.Text<span class="label @GetWarningStyle(item.Level)">@item.Level</span></a>
        </li>
        }
        <li class="divider"></li>
        <li>
            <a href="#">View All</a>
        </li>
    </ul>
</li>